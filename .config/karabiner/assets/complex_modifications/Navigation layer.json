{
  "title": "Navigation layer",
  "rules": [
    {
      "description": "Left arrow, tap & hold caps lock: J",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "caps-tapped",
              "value": 1
            }
          ],
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "Caps lock tapped",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control"
          },
          "to": [
            {
              "key_code": "left_control"
            },
            {
              "set_variable": {
                "name": "caps-tapped",
                "value": 1
              }
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "caps-tapped",
                  "value": 0
                }
              }
            ]
            // "to_if_canceled": [
            //   {
            //     "set_variable": {
            //       "name": "caps-tapped",
            //       "value": 0
            //     }
            //   }
            // ]
          }
        }
      ]
    },

    {
      "description": "right_shift x2 to mission_control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "mission_control"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "right_shift pressed",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "right_shift pressed",
                "value": 1
              }
            },
            {
              "key_code": "right_shift"
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "right_shift pressed",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "right_shift pressed",
                  "value": 0
                }
              }
            ]
          }
        }
      ]
    },
    
    {
      "description": "left_control x2 to toggle navigation layer",
      "manipulators": [
        // Toggle navigation layer with caps lock:
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "nav layer enabled",
                "value": 1
              }
            },
            {
              "key_code": "left_control"
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "nav layer enabled",
                  "value": 0
                }
              }
            ]
            // "to_if_canceled": [
            //   {
            //     "set_variable": {
            //       "name": "nav layer enabled",
            //       "value": 0
            //     }
            //   }
            // ]
          }
        },

        // Re=map J to left arrow
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "nav layer enabled",
              "value": 1
            }
          ]
        },

        // Re=map L to right arrow
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "nav layer enabled",
              "value": 1
            }
          ]
        },

        // Re=map i to up arrow
        {
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "nav layer enabled",
              "value": 1
            }
          ]
        },

        // Re=map k to down arrow
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "nav layer enabled",
              "value": 1
            }
          ]
        }
      ]
    },

    {
      "description": "left_option + IJKL as navigation layer",
      "manipulators": [
        // Re=map left_option + J to left arrow
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": "left_option"
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        },

        // Re=map left_option + L to right arrow
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": "left_option"
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        },

        // Re=map left_option + i to up arrow
        {
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": "left_option"
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },

        // Re=map left_option + k to down arrow
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": "left_option"
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        }
      ]
    }
  ]
}
